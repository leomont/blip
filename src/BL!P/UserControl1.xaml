        <TextBlock Height="36" Background="Cornsilk" HorizontalAlignment="Left" Margin="56,176,0,0" Name="projectDirTextBox" VerticalAlignment="Top" Width="391" FontWeight="Bold">None selected.</TextBlock>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="56,155,0,0" Name="textBlock3" Text="Currently selected folder is: " VerticalAlignment="Top" Width="154" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="56,217,0,0" Name="textBlock2" Text="Click Next to proceed." VerticalAlignment="Top" Width="233" />
    </Grid>
